---
import Layout from "../../layouts/Layout.astro";

import { getCollection } from "astro:content";
import RandomCardPage from "src/components/RandomCardPage";
const flippableCards = await getCollection("flippableCards");
---

<Layout title="Start your randomised experience">
  <section class="py-8">
    <RandomCardPage
      client:load
      cards={flippableCards}
    />
  </section>
</Layout>
