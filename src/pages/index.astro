---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

import { getCollection } from "astro:content";
const flippableCards = await getCollection("flippableCards");
---

<Layout title="Welcome to Astro.">
  <section>
    <h1 class="mb-8">Welcome to Astro</h1>

    <ul>
      {flippableCards.map((card) => <Card {...card.data} />)}
    </ul>
  </section>
</Layout>
