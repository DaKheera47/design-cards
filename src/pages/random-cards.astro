---
import Layout from "../layouts/Layout.astro";

import { getCollection } from "astro:content";
const flippableCards = await getCollection("flippableCards");
import RandomCardManager from "src/components/RandomCardManager";
---

<Layout title="Start your randomised experience">
  <section class="py-8">
    <RandomCardManager
      client:load
      cards={flippableCards}
    />
  </section>
</Layout>
